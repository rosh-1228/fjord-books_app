<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:study_date) %>:</strong>
  <%= @report.created_at.strftime("%F") %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:report_content) %>:</strong>
  <%= @report.report_content %>
</p>

<%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<%= link_to t('views.common.back'), reports_path %>

<p><strong><%= Comment.model_name.human %></strong></p>

<%= form_with(model: [@report, @comment], local: true) do |form| %>
  <div class="field">
    <%= form.label :comment_content %>
    <%= form.hidden_field :commentable_type, value: @comment[:commentable_type] %>
    <%= form.text_area :comment_content, size: '50x5', required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
      <th><%= Comment.human_attribute_name(:contributor) %></th>
      <th><%= Comment.human_attribute_name(:comment) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @comments.empty? %>
      <p>コメントはありません。</p>
    <% else %>
      <% @comments.each do |comment| %>
      <tr>
        <td><%= l comment[1] %></td>
        <% if comment[2] == '' %>
          <td><%= comment[4] %></td>
        <% else %>
          <td><%= comment[2] %></td>
        <% end %>
        <td><%= comment[0] %></td>
        <% if current_user.id == comment[3] %>
          <td><%= link_to t('views.common.edit'), polymorphic_path([:edit, @report, comment]) %></td>
          <td><%= link_to t('views.common.destroy'), polymorphic_path([@report, comment]), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
